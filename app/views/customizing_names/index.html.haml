= render('common/header')

%body
  #header
    %h1
      %table
        %tr
          %th 
            - logo = image_tag("blank.png", :alt => "")
            = link_to logo, "#"            
          %th 
            Verwaltung <span style="font-weight:bold; color:#73868C;">Software</span> ECO
  #container
    #navcontainer
      %ul#nav
        %li#nav-1 
          = link_to "Home", "#"         
        %li#nav-2
          = link_to "About", "#"         
        %li#nav-3
          = link_to "Portfolio", "#"         
        %li#nav-4      
          = link_to "Contact", "#"         
    #contentleft
      %h1 
        <span style="font-weight:bold; color:#C4DA64;">Software-Paket Namen</span> 
  
        %table
          %thead
            %tr
              %th
              %th
              %th
        
          %tbody
            - @customizing_names.each do |customizing_name|
              %tr
                %td= customizing_name.id
                %td= customizing_name.name
                %td= link_to 'Show', customizing_name
                %td= link_to 'Edit', edit_customizing_name_path(customizing_name)
                %td= link_to 'Destroy', customizing_name, :method => :delete, :data => { :confirm => 'Are you sure?' }
          
  #footer
    #bottom
      .col3center
        %h1
          Web Resources
        .navlist
          %ul
            %li
              = link_to "Open Designs", "#"
            %li
              = link_to "Open Web Design", "#"
            %li
              = link_to "CSS Drive", "#"
      .col3
        %h1
          Links
        .navlist
          %ul
            %li
              <a href="#">BBC News Frontpage</a>
            %li
              <a href="#">Hartlepool Today</a>
